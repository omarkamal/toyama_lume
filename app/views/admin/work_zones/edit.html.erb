<% content_for :title, "Edit Work Zone" %>

<div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <%= link_to "‚Üê Back to #{@work_zone.user.name}", admin_user_path(@work_zone.user), class: "text-[#226A73] text-sm hover:underline mb-4 inline-block" %>
  
  <div class="bg-white rounded-xl border border-[#DBDBDB] p-6 shadow-sm">
    <h1 class="text-2xl font-bold text-[#10223A] mb-6">Edit Work Zone</h1>

    <%= form_with(model: @work_zone, url: admin_work_zone_path(@work_zone), method: :patch, local: true, class: "space-y-6") do |f| %>
      <% if @work_zone.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-lg p-4">
          <h3 class="text-sm font-medium text-red-800 mb-2">Please fix the following errors:</h3>
          <ul class="list-disc list-inside text-sm text-red-700">
            <% @work_zone.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= f.label :name, "Location Name", class: "block text-sm font-medium text-[#10223A] mb-2" %>
        <%= f.text_field :name, placeholder: "e.g., Main Office, Home, Client Site", class: "w-full px-4 py-2 border border-[#DBDBDB] rounded-lg focus:ring-2 focus:ring-[#226A73] focus:border-[#226A73]", required: true %>
        <p class="text-xs text-[#323233]/60 mt-1">Give this location a memorable name</p>
      </div>

      <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-4">
        <h3 class="text-sm font-medium text-blue-800 mb-2">üìç Option A: Paste Google Maps Link (Easiest)</h3>
        <%= label_tag :google_maps_url, "Google Maps URL", class: "block text-sm font-medium text-blue-900 mb-2" %>
        <%= text_field_tag :google_maps_url, nil, placeholder: "https://www.google.com/maps/@35.6762,139.6503...", class: "w-full px-4 py-2 border border-blue-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        <p class="text-xs text-blue-700 mt-1">Paste a link from Google Maps (including short links) and we'll extract the coordinates for you.</p>
      </div>

      <div class="relative py-4">
        <div class="absolute inset-0 flex items-center" aria-hidden="true">
          <div class="w-full border-t border-[#DBDBDB]"></div>
        </div>
        <div class="relative flex justify-center text-sm">
          <span class="px-2 bg-white text-[#323233]/60 font-medium uppercase tracking-wider">Or enter coordinates manually</span>
        </div>
      </div>

      <div class="grid grid-cols-2 gap-4">
        <div>
          <%= f.label :latitude, "Latitude", class: "block text-sm font-medium text-[#10223A] mb-2" %>
          <%= f.text_field :latitude, placeholder: "12.981999", class: "w-full px-4 py-2 border border-[#DBDBDB] rounded-lg focus:ring-2 focus:ring-[#226A73] focus:border-[#226A73]" %>
        </div>
        <div>
          <%= f.label :longitude, "Longitude", class: "block text-sm font-medium text-[#10223A] mb-2" %>
          <%= f.text_field :longitude, placeholder: "77.601220", class: "w-full px-4 py-2 border border-[#DBDBDB] rounded-lg focus:ring-2 focus:ring-[#226A73] focus:border-[#226A73]" %>
        </div>
      </div>

      <div>
        <%= f.label :radius, "Radius (meters)", class: "block text-sm font-medium text-[#10223A] mb-2" %>
        <%= f.number_field :radius, min: 50, max: 1000, step: 50, class: "w-full px-4 py-2 border border-[#DBDBDB] rounded-lg focus:ring-2 focus:ring-[#226A73] focus:border-[#226A73]" %>
        <p class="text-xs text-[#323233]/60 mt-1">User can punch in within this distance from the location</p>
      </div>

      <div class="flex items-center">
        <%= f.check_box :active, class: "h-4 w-4 text-[#226A73] border-[#DBDBDB] rounded focus:ring-[#226A73]" %>
        <%= f.label :active, "Active (users can punch in at this location)", class: "ml-2 text-sm text-[#10223A]" %>
      </div>

      <div class="bg-[#F8F7F7] rounded-lg p-4 border border-[#DBDBDB]">
        <h3 class="text-sm font-medium text-[#10223A] mb-2">üí° How to get coordinates:</h3>
        <ol class="text-sm text-[#323233]/80 space-y-1 list-decimal list-inside">
          <li>Open Google Maps on your phone or computer</li>
          <li>Long-press (mobile) or right-click (desktop) on the location</li>
          <li>Click on the coordinates that appear</li>
          <li>Paste them above (first number is latitude, second is longitude)</li>
        </ol>
      </div>

      <div class="flex gap-3">
        <%= f.submit "Update Work Zone", class: "flex-1 bg-[#97D700] text-[#10223A] px-4 py-3 rounded-lg text-sm font-medium hover:bg-[#97D700]/90 transition-colors cursor-pointer" %>
        <%= link_to "Cancel", admin_user_path(@work_zone.user), class: "flex-1 text-center border border-[#DBDBDB] text-[#323233] px-4 py-3 rounded-lg text-sm font-medium hover:bg-[#F8F7F7] transition-colors" %>
      </div>
    <% end %>
  </div>
</div>
