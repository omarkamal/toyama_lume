<% content_for :title, "Team Leave Management" %>

<div class="min-h-screen bg-carbon-light">
  <!-- Header -->
  <div class="bg-white border-b border-cloudy px-4 py-4 sm:px-6">
    <div class="flex items-center justify-between">
      <div class="flex items-center gap-4">
        <%= link_to admin_root_path, class: "inline-flex items-center gap-2 text-carbon-heavy/60 hover:text-navy transition-colors" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          <span class="text-sm font-body font-normal">Admin Dashboard</span>
        <% end %>

        <div>
          <h1 class="text-xl font-heading font-medium text-navy">Team Leave Management</h1>
          <p class="text-carbon-heavy/60 text-sm font-body font-light">
            Manage and review all team leave requests
          </p>
        </div>
      </div>

      <div class="flex items-center gap-3">
        <%= link_to leave_requests_path, class: "inline-flex items-center gap-2 bg-teal text-white px-4 py-2 rounded-lg font-body font-normal hover:bg-teal/90 transition-colors" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
          <span>My Leave</span>
        <% end %>
      </div>
    </div>
  </div>

  <div class="px-4 py-6 max-w-7xl mx-auto">
    <!-- Statistics Cards -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
      <div class="bg-white p-4 rounded-xl border border-cloudy shadow-sm">
        <div class="flex items-center gap-3 mb-2">
          <div class="w-10 h-10 bg-navy/10 rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 text-navy" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
            </svg>
          </div>
          <span class="text-2xl font-heading font-medium text-navy"><%= @stats[:total] %></span>
        </div>
        <h3 class="font-body font-normal text-navy text-sm mb-1">Total Requests</h3>
        <p class="text-xs text-carbon-heavy/60">All time</p>
      </div>

      <div class="bg-white p-4 rounded-xl border border-cloudy shadow-sm relative">
        <% if @stats[:pending] > 0 %>
          <div class="absolute -top-2 -right-2 w-6 h-6 bg-orange rounded-full flex items-center justify-center">
            <span class="text-xs font-heading font-medium text-white"><%= @stats[:pending] %></span>
          </div>
        <% end %>
        <div class="flex items-center gap-3 mb-2">
          <div class="w-10 h-10 bg-orange/10 rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 text-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <span class="text-2xl font-heading font-medium text-navy"><%= @stats[:pending] %></span>
        </div>
        <h3 class="font-body font-normal text-navy text-sm mb-1">Pending Approval</h3>
        <p class="text-xs text-carbon-heavy/60">Need your action</p>
      </div>

      <div class="bg-white p-4 rounded-xl border border-cloudy shadow-sm">
        <div class="flex items-center gap-3 mb-2">
          <div class="w-10 h-10 bg-green/10 rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 text-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <span class="text-2xl font-heading font-medium text-navy"><%= @stats[:approved_this_month] %></span>
        </div>
        <h3 class="font-body font-normal text-navy text-sm mb-1">Approved This Month</h3>
        <p class="text-xs text-carbon-heavy/60"><%= Date.current.strftime("%B") %></p>
      </div>

      <div class="bg-white p-4 rounded-xl border border-cloudy shadow-sm">
        <div class="flex items-center gap-3 mb-2">
          <div class="w-10 h-10 bg-teal/10 rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 text-teal" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
          </div>
          <span class="text-2xl font-heading font-medium text-navy"><%= @stats[:total_this_year] %></span>
        </div>
        <h3 class="font-body font-normal text-navy text-sm mb-1">This Year</h3>
        <p class="text-xs text-carbon-heavy/60"><%= Date.current.year %></p>
      </div>
    </div>

    <!-- Filters and Search -->
    <div class="bg-white rounded-xl border border-cloudy shadow-sm p-6 mb-6">
      <%= form_with(url: admin_leave_requests_path, method: :get, class: "space-y-4") do |form| %>
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
          <!-- Status Filter -->
          <div>
            <%= form.label :status, "Status", class: "block text-sm font-heading font-medium text-navy mb-2" %>
            <%= form.select :status,
                options_for_select([
                  ["All Statuses", ""],
                  ["Pending", "pending"],
                  ["Approved", "approved"],
                  ["Rejected", "rejected"]
                ], params[:status]),
                { class: "w-full px-3 py-2 border border-cloudy rounded-lg focus:ring-2 focus:ring-teal focus:border-transparent font-body font-normal text-navy" } %>
          </div>

          <!-- User Filter -->
          <div>
            <%= form.label :user_id, "Employee", class: "block text-sm font-heading font-medium text-navy mb-2" %>
            <%= form.select :user_id,
                options_for_select([["All Employees", ""]] + @users.map { |u| [u.name, u.id] }, params[:user_id]),
                { class: "w-full px-3 py-2 border border-cloudy rounded-lg focus:ring-2 focus:ring-teal focus:border-transparent font-body font-normal text-navy" } %>
          </div>

          <!-- Start Date Filter -->
          <div>
            <%= form.label :start_date, "Start Date", class: "block text-sm font-heading font-medium text-navy mb-2" %>
            <%= form.date_field :start_date,
                value: params[:start_date],
                class: "w-full px-3 py-2 border border-cloudy rounded-lg focus:ring-2 focus:ring-teal focus:border-transparent font-body font-normal text-navy" %>
          </div>

          <!-- End Date Filter -->
          <div>
            <%= form.label :end_date, "End Date", class: "block text-sm font-heading font-medium text-navy mb-2" %>
            <%= form.date_field :end_date,
                value: params[:end_date],
                class: "w-full px-3 py-2 border border-cloudy rounded-lg focus:ring-2 focus:ring-teal focus:border-transparent font-body font-normal text-navy" %>
          </div>
        </div>

        <div class="flex items-center justify-between">
          <div class="flex items-center gap-3">
            <%= form.submit "Filter", class: "bg-navy hover:bg-navy/90 text-white px-4 py-2 rounded-lg text-sm font-body font-normal transition-colors" %>
            <%= link_to "Clear Filters", admin_leave_requests_path, class: "text-carbon-heavy/60 hover:text-navy text-sm font-body font-normal transition-colors" %>
          </div>

          <!-- Bulk Actions -->
          <% if @pending_requests.any? %>
            <div class="flex items-center gap-3">
              <%= button_to "Bulk Approve Selected", bulk_approve_admin_leave_requests_path,
                  method: :post,
                  form: { id: "bulk_approve_form", data: { turbo: true } },
                  class: "bg-green hover:bg-green/90 text-white px-4 py-2 rounded-lg text-sm font-body font-normal transition-all duration-200 shadow-sm hover:shadow-md" %>
              <%= button_to "Bulk Reject Selected", bulk_reject_admin_leave_requests_path,
                  method: :post,
                  form: { id: "bulk_reject_form", data: { turbo: true, turbo_confirm: "Are you sure you want to reject all selected pending requests?" } },
                  class: "bg-red hover:bg-red/90 text-white px-4 py-2 rounded-lg text-sm font-body font-normal transition-all duration-200 shadow-sm hover:shadow-md" %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>

    <!-- Leave Requests Table -->
    <% if @leave_requests.any? %>
      <div class="bg-white rounded-xl border border-cloudy shadow-sm overflow-hidden">
        <!-- Table Header -->
        <div class="p-4 border-b border-cloudy bg-carbon-light">
          <div class="flex items-center justify-between">
            <h2 class="text-lg font-heading font-medium text-navy">Leave Requests</h2>
            <span class="text-sm text-carbon-heavy/60">
              <%= @leave_requests.count %> request<%= 's' if @leave_requests.count != 1 %>
            </span>
          </div>
        </div>

        <!-- Desktop Table -->
        <div class="hidden lg:block overflow-x-auto">
          <table class="w-full">
            <thead>
              <tr class="border-b border-cloudy">
                <th class="text-left py-3 px-4 text-sm font-heading font-medium text-navy">
                  <% if @pending_requests.any? %>
                    <input type="checkbox" id="select-all-pending" class="rounded border-cloudy">
                  <% end %>
                </th>
                <th class="text-left py-3 px-4 text-sm font-heading font-medium text-navy">Employee</th>
                <th class="text-left py-3 px-4 text-sm font-heading font-medium text-navy">Dates</th>
                <th class="text-left py-3 px-4 text-sm font-heading font-medium text-navy">Duration</th>
                <th class="text-left py-3 px-4 text-sm font-heading font-medium text-navy">Status</th>
                <th class="text-left py-3 px-4 text-sm font-heading font-medium text-navy">Reason</th>
                <th class="text-left py-3 px-4 text-sm font-heading font-medium text-navy">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @leave_requests.each do |leave_request| %>
                <tr class="border-b border-cloudy/50 hover:bg-carbon-light transition-colors">
                  <td class="py-3 px-4">
                    <% if leave_request.pending? %>
                      <%= check_box_tag "leave_request_ids[]", leave_request.id, false,
                          class: "rounded border-cloudy pending-checkbox" %>
                    <% end %>
                  </td>
                  <td class="py-3 px-4">
                    <div class="font-body font-medium text-navy"><%= leave_request.user.name %></div>
                    <div class="text-xs text-carbon-heavy/60"><%= leave_request.user.email %></div>
                  </td>
                  <td class="py-3 px-4 text-sm text-navy">
                    <% if leave_request.half_day? %>
                      <%= leave_request.start_date.strftime("%B %d, %Y") %> (Half Day)
                    <% elsif leave_request.start_date == leave_request.end_date %>
                      <%= leave_request.start_date.strftime("%B %d, %Y") %>
                    <% else %>
                      <%= leave_request.start_date.strftime("%b %d") %> - <%= leave_request.end_date.strftime("%b %d, %Y") %>
                    <% end %>
                  </td>
                  <td class="py-3 px-4 text-sm text-navy">
                    <%= leave_request.duration_days %> day(s)
                    <span class="text-carbon-heavy/60">• <%= leave_request.business_days %> business days</span>
                  </td>
                  <td class="py-3 px-4">
                    <% if leave_request.pending? %>
                      <span class="inline-flex items-center px-2 py-1 rounded-md text-xs font-medium bg-orange/10 text-orange">
                        Pending
                      </span>
                    <% elsif leave_request.approved? %>
                      <span class="inline-flex items-center px-2 py-1 rounded-md text-xs font-medium bg-green/10 text-green">
                        Approved
                      </span>
                    <% else %>
                      <span class="inline-flex items-center px-2 py-1 rounded-md text-xs font-medium bg-red/10 text-red">
                        Rejected
                      </span>
                    <% end %>
                  </td>
                  <td class="py-3 px-4 text-sm text-carbon-heavy/70">
                    <%= leave_request.reason.present? ? leave_request.reason.truncate(50) : "—" %>
                  </td>
                  <td class="py-3 px-4">
                    <div class="flex items-center gap-2">
                      <%= link_to "View", admin_leave_request_path(leave_request),
                          class: "text-teal hover:text-teal/80 text-sm font-body font-normal" %>

                      <% if leave_request.pending? %>
                        <%= form_with(url: approve_admin_leave_request_path(leave_request), method: :post, class: "inline") do %>
                          <button type="submit"
                              class="bg-green hover:bg-green/90 text-white px-3 py-1 rounded text-xs font-body font-normal transition-all duration-200 shadow-sm hover:shadow-md"
                              title="Approve this leave request">
                            Approve
                          </button>
                        <% end %>
                        <%= form_with(url: reject_admin_leave_request_path(leave_request), method: :post,
                            data: { turbo: true, turbo_confirm: "Are you sure you want to reject this leave request?" },
                            class: "inline") do %>
                          <button type="submit"
                              class="bg-red hover:bg-red/90 text-white px-3 py-1 rounded text-xs font-body font-normal transition-all duration-200 shadow-sm hover:shadow-md"
                              title="Reject this leave request">
                            Reject
                          </button>
                        <% end %>
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <!-- Mobile View -->
        <div class="lg:hidden space-y-4 p-4">
          <% @leave_requests.each do |leave_request| %>
            <div class="border border-cloudy rounded-lg p-4 hover:bg-carbon-light transition-colors">
              <div class="flex items-start justify-between mb-3">
                <div>
                  <div class="font-body font-medium text-navy"><%= leave_request.user.name %></div>
                  <div class="text-xs text-carbon-heavy/60"><%= leave_request.user.email %></div>
                </div>
                <% if leave_request.pending? %>
                  <span class="inline-flex items-center px-2 py-1 rounded-md text-xs font-medium bg-orange/10 text-orange">
                    Pending
                  </span>
                <% elsif leave_request.approved? %>
                  <span class="inline-flex items-center px-2 py-1 rounded-md text-xs font-medium bg-green/10 text-green">
                    Approved
                  </span>
                <% else %>
                  <span class="inline-flex items-center px-2 py-1 rounded-md text-xs font-medium bg-red/10 text-red">
                    Rejected
                  </span>
                <% end %>
              </div>

              <div class="space-y-2 text-sm">
                <div>
                  <span class="font-medium">Dates:</span>
                  <% if leave_request.half_day? %>
                    <%= leave_request.start_date.strftime("%B %d, %Y") %> (Half Day)
                  <% elsif leave_request.start_date == leave_request.end_date %>
                    <%= leave_request.start_date.strftime("%B %d, %Y") %>
                  <% else %>
                    <%= leave_request.start_date.strftime("%b %d") %> - <%= leave_request.end_date.strftime("%b %d") %>
                  <% end %>
                </div>
                <div>
                  <span class="font-medium">Duration:</span>
                  <%= leave_request.duration_days %> day(s) • <%= leave_request.business_days %> business days
                </div>
                <% if leave_request.reason.present? %>
                  <div>
                    <span class="font-medium">Reason:</span> <%= leave_request.reason.truncate(50) %>
                  </div>
                <% end %>
              </div>

              <% if leave_request.pending? %>
                <div class="flex items-center gap-2 mt-3">
                  <% if @pending_requests.any? %>
                    <%= check_box_tag "leave_request_ids[]", leave_request.id, false,
                        class: "rounded border-cloudy pending-checkbox" %>
                  <% end %>
                  <%= form_with(url: approve_admin_leave_request_path(leave_request), method: :post, class: "inline") do %>
                    <button type="submit"
                        class="bg-green hover:bg-green/90 text-white px-3 py-1 rounded text-xs font-body font-normal transition-all duration-200 shadow-sm hover:shadow-md">
                      Approve
                    </button>
                  <% end %>
                  <%= form_with(url: reject_admin_leave_request_path(leave_request), method: :post,
                      data: { turbo: true, turbo_confirm: "Are you sure you want to reject this leave request?" },
                      class: "inline") do %>
                    <button type="submit"
                        class="bg-red hover:bg-red/90 text-white px-3 py-1 rounded text-xs font-body font-normal transition-all duration-200 shadow-sm hover:shadow-md">
                      Reject
                    </button>
                  <% end %>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    <% else %>
      <!-- Empty State -->
      <div class="bg-white rounded-xl border border-cloudy shadow-sm p-12 text-center">
        <div class="w-16 h-16 bg-carbon-light rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-carbon-heavy/40" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
        </div>
        <h3 class="text-lg font-heading font-medium text-navy mb-2">No Leave Requests</h3>
        <p class="text-carbon-heavy/60 text-sm">
          <% if params[:status].present? || params[:user_id].present? || params[:start_date].present? || params[:end_date].present? %>
            No leave requests match your current filters.
          <% else %>
            No leave requests have been submitted yet.
          <% end %>
        </p>
      </div>
    <% end %>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const selectAllCheckbox = document.getElementById('select-all-pending');
  const pendingCheckboxes = document.querySelectorAll('.pending-checkbox');

  if (selectAllCheckbox && pendingCheckboxes.length > 0) {
    selectAllCheckbox.addEventListener('change', function() {
      pendingCheckboxes.forEach(function(checkbox) {
        checkbox.checked = selectAllCheckbox.checked;
      });
    });

    // Update select-all checkbox when individual checkboxes change
    pendingCheckboxes.forEach(function(checkbox) {
      checkbox.addEventListener('change', function() {
        const allChecked = Array.from(pendingCheckboxes).every(cb => cb.checked);
        selectAllCheckbox.checked = allChecked;
        selectAllCheckbox.indeterminate = !allChecked && Array.from(pendingCheckboxes).some(cb => cb.checked);
      });
    });
  }
});
</script>