<% content_for :title, "Leave Request Details" %>

<div class="min-h-screen bg-carbon-light">
  <!-- Header -->
  <div class="bg-white border-b border-cloudy px-4 py-4 sm:px-6">
    <div class="max-w-4xl mx-auto flex items-center justify-between">
      <div class="flex items-center gap-4">
        <%= link_to admin_leave_requests_path, class: "inline-flex items-center gap-2 text-carbon-heavy/60 hover:text-navy transition-colors" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          <span class="text-sm font-body font-normal">Back to Team Leave</span>
        <% end %>

        <div>
          <h1 class="text-xl font-heading font-medium text-navy">Leave Request Details</h1>
          <p class="text-carbon-heavy/60 text-sm font-body font-light">
            Review request details and take action
          </p>
        </div>
      </div>

      <div class="flex items-center gap-3">
        <%= link_to leave_request_path(@leave_request), class: "inline-flex items-center gap-2 bg-teal text-white px-4 py-2 rounded-lg font-body font-normal hover:bg-teal/90 transition-colors" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
          <span>Employee View</span>
        <% end %>
      </div>
    </div>
  </div>

  <div class="px-4 py-6 max-w-4xl mx-auto">
    <!-- Main Leave Request Card -->
    <div class="bg-white rounded-xl border border-cloudy shadow-sm p-6 mb-6">
      <!-- Status Badge -->
      <div class="flex items-center justify-between mb-6">
        <div class="flex items-center gap-4">
          <% if @leave_request.pending? %>
            <span class="inline-flex items-center px-3 py-1.5 rounded-full text-sm font-body font-normal bg-orange/10 text-orange">
              <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0 1 1 0 012 0zm-1 4a1 1 0 10-2 0 1 1 0 012 0z" clip-rule="evenodd" />
              </svg>
              Pending Review
            </span>
          <% elsif @leave_request.approved? %>
            <span class="inline-flex items-center px-3 py-1.5 rounded-full text-sm font-body font-normal bg-green/10 text-green">
              <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              Approved
            </span>
          <% else %>
            <span class="inline-flex items-center px-3 py-1.5 rounded-full text-sm font-body font-normal bg-red/10 text-red">
              <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l4.293 4.293a1 1 0 001.414-1.414L11.414 10l4.293-4.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
              </svg>
              Rejected
            </span>
          <% end %>
        </div>

        <div class="text-sm text-carbon-heavy/50">
          Request ID: #<%= @leave_request.id %>
        </div>
      </div>

      <!-- Employee Information -->
      <div class="space-y-4 mb-6">
        <div>
          <h3 class="text-sm font-heading font-medium text-navy mb-2">Employee Information</h3>
          <div class="flex items-center gap-4">
            <div class="w-12 h-12 bg-navy/10 rounded-full flex items-center justify-center">
              <span class="text-navy font-heading font-medium text-lg">
                <%= @leave_request.user.name.first.upcase %>
              </span>
            </div>
            <div>
              <div class="font-body font-medium text-navy"><%= @leave_request.user.name %></div>
              <div class="text-sm text-carbon-heavy/60"><%= @leave_request.user.email %></div>
              <div class="text-sm text-carbon-heavy/60">Role: <%= @leave_request.user.role.humanize %></div>
            </div>
          </div>
        </div>
      </div>

      <!-- Leave Details -->
      <div class="space-y-4 mb-6">
        <h3 class="text-sm font-heading font-medium text-navy">Leave Details</h3>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <div class="text-sm text-carbon-heavy/60 mb-1">Type</div>
            <div class="font-body font-medium text-navy">
              <%= @leave_request.half_day? ? "Half Day" : "Full Day" %>
            </div>
          </div>

          <div>
            <div class="text-sm text-carbon-heavy/60 mb-1">Duration</div>
            <div class="font-body font-medium text-navy">
              <%= @leave_request.duration_days %> day(s)
              <span class="text-carbon-heavy/60">â€¢ <%= @leave_request.business_days %> business days</span>
            </div>
          </div>
        </div>

        <div>
          <div class="text-sm text-carbon-heavy/60 mb-1">Date Range</div>
          <div class="font-body font-medium text-navy">
            <% if @leave_request.half_day? %>
              <%= @leave_request.start_date.strftime("%A, %B %d, %Y") %> (Half Day)
            <% elsif @leave_request.start_date == @leave_request.end_date %>
              <%= @leave_request.start_date.strftime("%A, %B %d, %Y") %>
            <% else %>
              <%= @leave_request.start_date.strftime("%A, %B %d") %> - <%= @leave_request.end_date.strftime("%A, %B %d, %Y") %>
            <% end %>
          </div>
        </div>

        <% if @leave_request.reason.present? %>
          <div>
            <div class="text-sm text-carbon-heavy/60 mb-1">Reason for Leave</div>
            <div class="font-body font-medium text-navy">
              <%= @leave_request.reason %>
            </div>
          </div>
        <% end %>

        <!-- Holiday/Weekend Information -->
        <% if @leave_request.holidays_during_leave.any? || @leave_request.weekends_during_leave.any? %>
          <div>
            <div class="text-sm text-carbon-heavy/60 mb-2">Calendar Information</div>
            <div class="flex flex-wrap gap-2">
              <% if @leave_request.holidays_during_leave.any? %>
                <div class="inline-flex items-center gap-1 px-3 py-1 bg-orange/10 text-orange rounded">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a2 2 0 112 2h-2a2 2 0 01-2-2V6a2 2 0 112-2h2z" />
                  </svg>
                  <%= @leave_request.holidays_during_leave.count %> holiday<%= 's' if @leave_request.holidays_during_leave.count > 1 %> during this period
                </div>
              <% end %>
              <% if @leave_request.weekends_during_leave.any? %>
                <div class="inline-flex items-center gap-1 px-3 py-1 bg-navy/10 text-navy rounded">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                  <%= @leave_request.weekends_during_leave.count %> weekend<%= 's' if @leave_request.weekends_during_leave.count > 1 %> automatically excluded
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Timestamps -->
      <div class="border-t border-cloudy pt-4">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm">
          <div>
            <div class="text-carbon-heavy/60">Requested</div>
            <div class="font-body font-medium text-navy">
              <%= @leave_request.created_at.strftime("%B %d, %Y at %I:%M %p") %>
            </div>
          </div>

          <% if @leave_request.approved? && @leave_request.approved_by %>
            <div>
              <div class="text-carbon-heavy/60">Approved By</div>
              <div class="font-body font-medium text-navy">
                <%= @leave_request.approved_by.name %> on <%= @leave_request.approved_at.strftime("%B %d, %Y at %I:%M %p") %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Action Buttons -->
    <% if @leave_request.pending? %>
      <div class="bg-white rounded-xl border border-cloudy shadow-sm p-6">
        <h3 class="text-lg font-heading font-medium text-navy mb-4">Take Action</h3>

        <div class="flex flex-col sm:flex-row gap-4">
          <%= form_with(url: approve_admin_leave_request_path(@leave_request), method: :post, class: "w-full sm:w-auto") do %>
            <button type="submit"
                    class="w-full bg-green hover:bg-green/90 text-white px-6 py-3 rounded-lg font-body font-medium transition-all duration-200 flex items-center justify-center gap-2 shadow-sm hover:shadow-md">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
              </svg>
              Approve Leave Request
            </button>
          <% end %>

          <%= form_with(url: reject_admin_leave_request_path(@leave_request), method: :post,
              data: { turbo: true, turbo_confirm: "Are you sure you want to reject this leave request? This action cannot be undone." },
              class: "w-full sm:w-auto") do %>
            <button type="submit"
                    class="w-full bg-red hover:bg-red/90 text-white px-6 py-3 rounded-lg font-body font-medium transition-all duration-200 flex items-center justify-center gap-2 shadow-sm hover:shadow-md">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
              Reject Leave Request
            </button>
          <% end %>
        </div>
      </div>
    <% end %>

    <!-- Additional Information -->
    <div class="bg-white rounded-xl border border-cloudy shadow-sm p-6">
      <h3 class="text-lg font-heading font-medium text-navy mb-4">Additional Information</h3>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <h4 class="text-sm font-heading font-medium text-navy mb-3">Request Summary</h4>
          <dl class="space-y-2">
            <div class="flex justify-between text-sm">
              <dt class="text-carbon-heavy/60">Request Type:</dt>
              <dd class="font-body font-medium text-navy"><%= @leave_request.half_day? ? "Half Day Leave" : "Full Day Leave" %></dd>
            </div>
            <div class="flex justify-between text-sm">
              <dt class="text-carbon-heavy/60">Total Duration:</dt>
              <dd class="font-body font-medium text-navy"><%= @leave_request.duration_days %> calendar day(s)</dd>
            </div>
            <div class="flex justify-between text-sm">
              <dt class="text-carbon-heavy/60">Business Days:</dt>
              <dd class="font-body font-medium text-navy"><%= @leave_request.business_days %> business day(s)</dd>
            </div>
            <div class="flex justify-between text-sm">
              <dt class="text-carbon-heavy/60">Weekends Covered:</dt>
              <dd class="font-body font-medium text-navy"><%= @leave_request.weekends_during_leave.count %> day(s)</dd>
            </div>
            <div class="flex justify-between text-sm">
              <dt class="text-carbon-heavy/60">Holidays Covered:</dt>
              <dd class="font-body font-medium text-navy"><%= @leave_request.holidays_during_leave.count %> day(s)</dd>
            </div>
          </dl>
        </div>

        <div>
          <h4 class="text-sm font-heading font-medium text-navy mb-3">Processing Timeline</h4>
          <dl class="space-y-2">
            <div class="flex justify-between text-sm">
              <dt class="text-carbon-heavy/60">Submitted:</dt>
              <dd class="font-body font-medium text-navy"><%= @leave_request.created_at.strftime("%m/%d/%Y %I:%M %p") %></dd>
            </div>
            <% if @leave_request.approved? %>
              <div class="flex justify-between text-sm">
                <dt class="text-carbon-heavy/60">Approved:</dt>
                <dd class="font-body font-medium text-navy"><%= @leave_request.approved_at.strftime("%m/%d/%Y %I:%M %p") %></dd>
              </div>
              <div class="flex justify-between text-sm">
                <dt class="text-carbon-heavy/60">Processing Time:</dt>
                <dd class="font-body font-medium text-navy">
                  <%= distance_of_time_in_words(@leave_request.created_at, @leave_request.approved_at) %>
                </dd>
              </div>
            <% end %>
          </dl>
        </div>
      </div>
    </div>
  </div>
</div>