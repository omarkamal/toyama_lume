<% content_for :title, "Edit User" %>

<div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <%= link_to "â† Back to #{@user.name}", admin_user_path(@user), class: "text-[#226A73] text-sm hover:underline mb-4 inline-block" %>
  
  <div class="bg-white rounded-xl border border-[#DBDBDB] p-6 shadow-sm">
    <h1 class="text-2xl font-bold text-[#10223A] mb-6">Edit User: <%= @user.name %></h1>

    <%= form_with(model: @user, url: admin_user_path(@user), method: :patch, local: true, class: "space-y-6") do |f| %>
      <% if @user.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-lg p-4">
          <h3 class="text-sm font-medium text-red-800 mb-2">Please fix the following errors:</h3>
          <ul class="list-disc list-inside text-sm text-red-700">
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= f.label :name, "Name", class: "block text-sm font-medium text-[#10223A] mb-2" %>
        <%= f.text_field :name, class: "w-full px-4 py-2 border border-[#DBDBDB] rounded-lg focus:ring-2 focus:ring-[#226A73] focus:border-[#226A73]" %>
      </div>

      <div>
        <%= f.label :email, "Email", class: "block text-sm font-medium text-[#10223A] mb-2" %>
        <%= f.email_field :email, class: "w-full px-4 py-2 border border-[#DBDBDB] rounded-lg focus:ring-2 focus:ring-[#226A73] focus:border-[#226A73]" %>
      </div>

      <div>
        <%= f.label :role, "Role", class: "block text-sm font-medium text-[#10223A] mb-2" %>
        <%= f.select :role, User.roles.keys.map { |r| [r.titleize, r] }, {}, class: "w-full px-4 py-2 border border-[#DBDBDB] rounded-lg focus:ring-2 focus:ring-[#226A73] focus:border-[#226A73]" %>
      </div>

      <div class="bg-[#F8F7F7] rounded-lg p-4 border border-[#DBDBDB]">
        <div class="flex items-start">
          <%= f.check_box :remote, class: "h-4 w-4 text-[#226A73] border-[#DBDBDB] rounded focus:ring-[#226A73] mt-0.5" %>
          <div class="ml-3">
            <%= f.label :remote, "Remote Worker", class: "block text-sm font-medium text-[#10223A]" %>
            <p class="text-xs text-[#323233]/60 mt-1">
              Remote workers can punch in from anywhere, without geofencing restrictions.
              Office-based employees must be within their assigned work zones.
            </p>
          </div>
        </div>
      </div>

      <div class="flex gap-3">
        <%= f.submit "Save Changes", class: "flex-1 bg-[#97D700] text-[#10223A] px-4 py-3 rounded-lg text-sm font-medium hover:bg-[#97D700]/90 transition-colors cursor-pointer" %>
        <%= link_to "Cancel", admin_user_path(@user), class: "flex-1 text-center border border-[#DBDBDB] text-[#323233] px-4 py-3 rounded-lg text-sm font-medium hover:bg-[#F8F7F7] transition-colors" %>
      </div>
    <% end %>
  </div>
</div>
