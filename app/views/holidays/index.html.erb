<% content_for :title, "Holidays" %>

<div class="min-h-screen bg-carbon-light">
  <!-- Header -->
  <div class="bg-white border-b border-cloudy px-4 py-4 sm:px-6">
    <div class="flex items-center gap-4">
      <%= link_to root_path, class: "inline-flex items-center gap-2 text-carbon-heavy/60 hover:text-navy transition-colors" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        <span class="text-sm font-body font-normal">Back to Dashboard</span>
      <% end %>

      <div class="flex-1">
        <h1 class="text-xl font-heading font-medium text-navy">Holidays</h1>
        <p class="text-carbon-heavy/60 text-sm font-body font-light">
          <%= @current_year %> Company Holidays & Observances
        </p>
      </div>
    </div>
  </div>

  <div class="max-w-4xl mx-auto px-4 py-6">
    <!-- Holidays Section -->
    <div class="bg-white rounded-xl border border-cloudy shadow-sm p-6">
      <div class="flex items-center gap-3 mb-6">
        <div class="w-10 h-10 bg-teal/10 rounded-lg flex items-center justify-center">
          <svg class="w-5 h-5 text-teal" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
          </svg>
        </div>
        <div>
          <h2 class="text-lg font-heading font-medium text-navy">Company Holidays</h2>
          <p class="text-sm text-carbon-heavy/60">Official holidays for the Toyama team</p>
        </div>
      </div>

      <% if @holidays.any? %>
        <div class="overflow-x-auto">
          <table class="w-full">
            <thead>
              <tr class="border-b border-cloudy">
                <th class="text-left py-3 px-4 text-sm font-heading font-medium text-navy">Date</th>
                <th class="text-left py-3 px-4 text-sm font-heading font-medium text-navy">Holiday</th>
                <th class="text-left py-3 px-4 text-sm font-heading font-medium text-navy">Day</th>
                <th class="text-left py-3 px-4 text-sm font-heading font-medium text-navy">Type</th>
              </tr>
            </thead>
            <tbody>
              <% @holidays.each do |holiday| %>
                <tr class="border-b border-cloudy/50 hover:bg-carbon-light transition-colors">
                  <td class="py-3 px-4 text-sm font-body font-normal text-navy">
                    <%= holiday[:date].strftime("%B %d, %Y") %>
                  </td>
                  <td class="py-3 px-4 text-sm font-body font-normal text-navy">
                    <%= holiday[:name] %>
                  </td>
                  <td class="py-3 px-4">
                    <span class="inline-flex items-center px-3 py-1 rounded-md text-sm font-body font-light bg-teal/10 text-teal">
                      <%= holiday[:date].strftime("%A") %>
                    </span>
                  </td>
                  <td class="py-3 px-4">
                    <% if holiday[:company_only] %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-body font-light bg-lime/10 text-lime">
                        Company
                      </span>
                    <% else %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-body font-light bg-navy/10 text-navy">
                        Public
                      </span>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <!-- Note -->
        <div class="mt-6 p-4 bg-carbon-light rounded-lg">
          <div class="flex items-start gap-3">
            <svg class="w-5 h-5 text-carbon-heavy/60 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <div>
              <h4 class="text-sm font-heading font-medium text-navy mb-1">Holiday Information</h4>
              <p class="text-sm text-carbon-heavy/70">
                This list shows all holidays observed by the Toyama team for <%= @current_year %>.
                These holidays are automatically excluded from business day calculations in leave requests.
              </p>
            </div>
          </div>
        </div>
      <% else %>
        <div class="text-center py-8">
          <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
          </div>
          <p class="text-gray-500 text-sm">No holidays scheduled for <%= @current_year %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>