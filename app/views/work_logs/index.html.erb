<% content_for :title, "Work Logs" %>

<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-3xl font-bold text-[#10223A]">My Work Logs</h1>
    <%= link_to "← Back to Dashboard", root_path, class: "text-[#226A73] text-sm hover:underline" %>
  </div>

  <% if @work_logs.any? %>
    <div class="bg-white rounded-xl border border-[#DBDBDB] shadow-sm overflow-hidden">
      <div class="divide-y divide-[#DBDBDB]">
        <% @work_logs.each do |work_log| %>
          <div class="p-4 hover:bg-[#F8F7F7] transition-colors">
            <div class="flex items-start justify-between">
              <div class="flex-1">
                <div class="flex items-center gap-3 mb-2">
                  <div class="font-medium text-[#10223A]">
                    <%= work_log.punch_in.strftime("%A, %B %d, %Y") %>
                  </div>
                  <% if work_log.punch_out %>
                    <span class="inline-flex items-center px-2 py-0.5 rounded-md text-xs font-medium bg-[#97D700]/10 text-[#97D700]">
                      Completed
                    </span>
                  <% else %>
                    <span class="inline-flex items-center px-2 py-0.5 rounded-md text-xs font-medium bg-[#226A73]/10 text-[#226A73]">
                      Active
                    </span>
                  <% end %>
                </div>
                
                <div class="text-sm text-[#323233]/60 mb-2">
                  <div class="flex items-center gap-4">
                    <span>In: <%= work_log.punch_in.strftime("%I:%M %p") %></span>
                    <% if work_log.punch_out %>
                      <span>Out: <%= work_log.punch_out.strftime("%I:%M %p") %></span>
                      <span class="text-[#226A73] font-medium"><%= work_log.duration_hours %>h</span>
                    <% else %>
                      <span class="text-[#226A73]">Currently active</span>
                    <% end %>
                  </div>
                </div>

                <% if work_log.tasks.any? %>
                  <div class="mt-3">
                    <div class="text-xs text-[#323233]/60 mb-1">Tasks:</div>
                    <div class="flex flex-wrap gap-2">
                      <% work_log.work_log_tasks.includes(:task).first(5).each do |work_log_task| %>
                        <span class="inline-flex items-center px-2 py-0.5 rounded-md text-xs font-medium
                          <%= case work_log_task.status
                              when 'completed' then 'bg-[#97D700]/10 text-[#97D700]'
                              when 'in_progress' then 'bg-[#226A73]/10 text-[#226A73]'
                              else 'bg-[#DBDBDB] text-[#323233]'
                              end %>">
                          <%= work_log_task.task.title %>
                        </span>
                      <% end %>
                      <% if work_log.tasks.count > 5 %>
                        <span class="text-xs text-[#323233]/60">
                          +<%= work_log.tasks.count - 5 %> more
                        </span>
                      <% end %>
                    </div>
                  </div>
                <% end %>

                <% if work_log.mood.present? %>
                  <div class="mt-2 text-sm text-[#323233]/60">
                    Mood: <%= mood_emoji(work_log.mood) %>
                  </div>
                <% end %>
              </div>

              <div class="flex-shrink-0 ml-4">
                <%= link_to "View Details", work_log_path(work_log), class: "text-[#226A73] text-sm hover:underline" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Pagination -->
    <% if @pagy.pages > 1 %>
      <div class="mt-6 flex justify-center">
        <%== pagy_nav(@pagy) %>
      </div>
    <% end %>
  <% else %>
    <div class="bg-white rounded-xl border border-[#DBDBDB] p-12 text-center">
      <div class="text-6xl mb-4">📋</div>
      <h2 class="text-xl font-medium text-[#10223A] mb-2">No work logs yet</h2>
      <p class="text-[#323233]/60 mb-6">Start by punching in on your dashboard</p>
      <%= link_to "Go to Dashboard", root_path, class: "bg-[#97D700] text-[#10223A] px-6 py-3 rounded-lg text-sm font-medium hover:bg-[#97D700]/90 transition-colors inline-block" %>
    </div>
  <% end %>
</div>
