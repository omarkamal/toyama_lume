<% content_for :title, "Work Logs" %>

<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="flex items-center justify-between mb-6">
    <div>
      <h1 class="text-xl font-heading font-medium text-navy">Work Logs</h1>
      <p class="mt-1 text-sm font-body font-light text-carbon-heavy/70">Track your daily work sessions and completed tasks</p>
    </div>
    <%= link_to root_path, class: "text-teal text-sm font-body font-normal hover:text-teal/80 transition-colors" do %>
      ‚Üê Back to Dashboard
    <% end %>
  </div>

  <% if @work_logs.any? %>
    <div class="bg-white rounded-xl border border-cloudy shadow-sm overflow-hidden">
      <div class="divide-y divide-cloudy">
        <% @work_logs.each do |work_log| %>
          <div class="p-4 hover:bg-carbon-light transition-colors">
            <div class="flex items-start justify-between">
              <div class="flex-1">
                <div class="flex items-center gap-3 mb-2">
                  <div class="font-heading font-medium text-navy">
                    <%= work_log.punch_in.strftime("%A, %B %d, %Y") %>
                  </div>
                  <% if work_log.punch_out %>
                    <span class="inline-flex items-center px-2 py-0.5 rounded-md text-xs font-body font-normal bg-lime/10 text-lime">
                      Completed
                    </span>
                  <% else %>
                    <span class="inline-flex items-center px-2 py-0.5 rounded-md text-xs font-body font-normal bg-teal/10 text-teal">
                      Active
                    </span>
                  <% end %>
                </div>
                
                <div class="text-sm font-body font-light text-carbon-heavy/60 mb-2">
                  <div class="flex items-center gap-4">
                    <span>In: <%= work_log.punch_in.strftime("%I:%M %p") %></span>
                    <% if work_log.punch_out %>
                      <span>Out: <%= work_log.punch_out.strftime("%I:%M %p") %></span>
                      <span class="text-teal font-body font-normal"><%= work_log.duration_hours %>h</span>
                    <% else %>
                      <span class="text-teal font-body font-normal">Currently active</span>
                    <% end %>
                  </div>
                </div>

                <% if work_log.tasks.any? %>
                  <div class="mt-3">
                    <div class="text-xs font-body font-light text-carbon-heavy/60 mb-1">Tasks:</div>
                    <div class="flex flex-wrap gap-2">
                      <% work_log.work_log_tasks.includes(:task).first(5).each do |work_log_task| %>
                        <span class="inline-flex items-center px-2 py-0.5 rounded-md text-xs font-body font-light
                          <%= case work_log_task.status
                              when 'completed' then 'bg-lime/10 text-lime'
                              when 'in_progress' then 'bg-teal/10 text-teal'
                              else 'bg-cloudy text-carbon-heavy'
                              end %>">
                          <%= work_log_task.task.title %>
                        </span>
                      <% end %>
                      <% if work_log.tasks.count > 5 %>
                        <span class="text-xs font-body font-light text-carbon-heavy/60">
                          +<%= work_log.tasks.count - 5 %> more
                        </span>
                      <% end %>
                    </div>
                  </div>
                <% end %>

                <% if work_log.mood.present? %>
                  <div class="mt-2 text-sm font-body font-light text-carbon-heavy/60">
                    Mood: <%= mood_emoji(work_log.mood) %>
                  </div>
                <% end %>
              </div>

              <div class="flex-shrink-0 ml-4">
                <%= link_to "View Details", work_log_path(work_log), class: "text-teal text-sm font-body font-normal hover:text-teal/80 transition-colors" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Pagination -->
    <% if @pagy.pages > 1 %>
      <div class="mt-6 flex justify-center">
        <%== pagy_nav(@pagy) %>
      </div>
    <% end %>
  <% else %>
    <div class="bg-white rounded-xl border border-cloudy p-12 text-center">
      <div class="text-6xl mb-4">üìã</div>
      <h2 class="text-xl font-heading font-medium text-navy mb-2">No work logs yet</h2>
      <p class="text-carbon-heavy/60 font-body font-light mb-6">Start by punching in on your dashboard</p>
      <%= link_to "Go to Dashboard", root_path, class: "bg-lime text-navy px-6 py-3 rounded-lg text-sm font-body font-normal hover:bg-lime/90 transition-colors inline-block" %>
    </div>
  <% end %>
</div>
