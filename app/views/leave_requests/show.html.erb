<% content_for :title, "Leave Request Details" %>

<div class="min-h-screen bg-carbon-light">
  <!-- Header -->
  <div class="bg-white border-b border-cloudy px-4 py-4 sm:px-6">
    <div class="max-w-4xl mx-auto flex items-center justify-between">
      <div class="flex items-center gap-4">
        <%= link_to leave_requests_path, class: "inline-flex items-center gap-2 text-carbon-heavy/60 hover:text-navy transition-colors" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          <span class="text-sm font-body font-normal">Back to My Leave</span>
        <% end %>

        <div>
          <h1 class="text-xl font-heading font-medium text-navy">Leave Request Details</h1>
          <p class="text-carbon-heavy/60 text-sm font-body font-light">
            View your leave request status and details
          </p>
        </div>
      </div>

      <% if @leave_request.pending? %>
        <div class="flex items-center gap-3">
          <%= link_to "Edit Request", edit_leave_request_path(@leave_request), class: "inline-flex items-center gap-2 bg-teal text-white px-4 py-2 rounded-lg font-body font-normal hover:bg-teal/90 transition-colors" %>
          <%= button_to "Cancel Request", @leave_request, method: :delete,
              data: { turbo: true, turbo_confirm: "Are you sure you want to cancel this leave request?" },
              class: "bg-red hover:bg-red/90 text-white px-4 py-2 rounded-lg font-body font-normal transition-all duration-200 shadow-sm hover:shadow-md" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="px-4 py-6 max-w-4xl mx-auto">
    <!-- Main Leave Request Card -->
    <div class="bg-white rounded-xl border border-cloudy shadow-sm p-6 mb-6">
      <!-- Status Badge -->
      <div class="flex items-center justify-between mb-6">
        <div class="flex items-center gap-4">
          <% if @leave_request.pending? %>
            <span class="inline-flex items-center px-3 py-1.5 rounded-full text-sm font-body font-normal bg-orange/10 text-orange">
              Pending Review
            </span>
          <% elsif @leave_request.approved? %>
            <span class="inline-flex items-center px-3 py-1.5 rounded-full text-sm font-body font-normal bg-green/10 text-green">
              Approved
            </span>
          <% else %>
            <span class="inline-flex items-center px-3 py-1.5 rounded-full text-sm font-body font-normal bg-red/10 text-red">
              Rejected
            </span>
          <% end %>
        </div>

        <div class="text-sm text-carbon-heavy/50">
          Request ID: #<%= @leave_request.id %>
        </div>
      </div>

      <!-- Leave Details -->
      <div class="space-y-4 mb-6">
        <h3 class="text-sm font-heading font-medium text-navy">Leave Details</h3>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <div class="text-sm text-carbon-heavy/60 mb-1">Type</div>
            <div class="font-body font-medium text-navy">
              <%= @leave_request.half_day? ? "Half Day" : "Full Day" %>
            </div>
          </div>

          <div>
            <div class="text-sm text-carbon-heavy/60 mb-1">Duration</div>
            <div class="font-body font-medium text-navy">
              <%= @leave_request.duration_days %> day(s)
              <span class="text-carbon-heavy/60">â€¢ <%= @leave_request.business_days %> business days</span>
            </div>
          </div>
        </div>

        <div>
          <div class="text-sm text-carbon-heavy/60 mb-1">Date Range</div>
          <div class="font-body font-medium text-navy">
            <% if @leave_request.half_day? %>
              <%= @leave_request.start_date.strftime("%A, %B %d, %Y") %> (Half Day)
            <% elsif @leave_request.start_date == @leave_request.end_date %>
              <%= @leave_request.start_date.strftime("%A, %B %d, %Y") %>
            <% else %>
              <%= @leave_request.start_date.strftime("%A, %B %d") %> - <%= @leave_request.end_date.strftime("%A, %B %d, %Y") %>
            <% end %>
          </div>
        </div>

        <% if @leave_request.reason.present? %>
          <div>
            <div class="text-sm text-carbon-heavy/60 mb-1">Reason for Leave</div>
            <div class="font-body font-medium text-navy">
              <%= @leave_request.reason %>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Timestamps -->
      <div class="border-t border-cloudy pt-4">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm">
          <div>
            <div class="text-carbon-heavy/60">Requested</div>
            <div class="font-body font-medium text-navy">
              <%= @leave_request.created_at.strftime("%B %d, %Y at %I:%M %p") %>
            </div>
          </div>

          <% if @leave_request.approved? && @leave_request.approved_by %>
            <div>
              <div class="text-carbon-heavy/60">Approved By</div>
              <div class="font-body font-medium text-navy">
                <%= @leave_request.approved_by.name %> on <%= @leave_request.approved_at.strftime("%B %d, %Y at %I:%M %p") %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>