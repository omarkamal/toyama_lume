<% content_for :title, "New Task" %>

<div class="max-w-2xl mx-auto">
  <div class="bg-white shadow sm:rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Create New Task</h3>

      <%= form_with(model: @task, local: true, class: "space-y-6") do |form| %>
        <%= render "shared/errors", object: @task if @task.errors.any? %>

        <div>
          <%= form.label :title, class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :title, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", required: true %>
        </div>

        <div>
          <%= form.label :description, class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_area :description, rows: 4, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
        </div>

        <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-2">
          <div>
            <%= form.label :category, class: "block text-sm font-medium text-gray-700" %>
            <%= form.select :category,
                ["Development", "Meetings", "Communication", "Planning", "Research", "Learning", "Documentation", "Admin"],
                { prompt: "Select a category" },
                { class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", required: true } %>
          </div>

          <div>
            <%= form.label :priority, class: "block text-sm font-medium text-gray-700" %>
            <%= form.select :priority,
                Task.priorities.keys.map { |p| [p.titleize, p] },
                { },
                { class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", required: true } %>
          </div>
        </div>

        <% if current_user.admin? %>
          <div class="flex items-center">
            <%= form.check_box :is_global, class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded" %>
            <%= form.label :is_global, "Make this a global task template (available to everyone)", class: "ml-2 block text-sm text-gray-900" %>
          </div>
        <% end %>

        <div class="flex items-center justify-end space-x-3">
          <%= link_to "Cancel", :back, class: "bg-gray-300 hover:bg-gray-400 text-gray-800 px-4 py-2 rounded-md text-sm font-medium" %>
          <%= form.submit "Create Task", class: "bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded-md text-sm font-medium" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
