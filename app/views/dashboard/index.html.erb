<% content_for :title, "Dashboard" %>

<div class="max-w-2xl mx-auto bg-white min-h-screen pb-20 sm:shadow-lg sm:my-4">
  <!-- Header Section -->
  <div class="bg-[#10223A] text-white px-4 sm:px-6 pt-6 pb-8 sm:rounded-t-xl">
    <!-- Top Bar -->
    <div class="flex items-start justify-between mb-6">
      <div class="flex-1">
        <p class="text-[#97D700] text-xs uppercase tracking-wide mb-1">Welcome back</p>
        <h1 class="text-xl sm:text-2xl font-medium"><%= current_user.name %></h1>
        <p class="text-white/60 text-sm mt-1">
          <%= Date.current.strftime("%A, %B %d") %>
        </p>
      </div>
      <div class="flex flex-col items-end gap-2">
        <% if @current_work_log %>
          <div class="bg-[#97D700]/20 border border-[#97D700]/30 px-3 py-1.5 rounded-lg">
            <div class="flex items-center gap-1.5">
              <div class="w-2 h-2 bg-[#97D700] rounded-full animate-pulse"></div>
              <span class="text-[#97D700] text-xs font-medium">Active</span>
            </div>
          </div>
          <span class="text-white/50 text-xs">Since <%= @current_work_log.punch_in.strftime("%I:%M %p") %></span>
        <% else %>
          <div class="bg-white/10 px-3 py-1.5 rounded-lg">
            <span class="text-white/60 text-xs font-medium">Offline</span>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Main Action Button -->
    <div class="mt-6">
      <% if @current_work_log %>
        <%= button_to punch_out_work_log_path(@current_work_log),
            method: :get,
            class: "w-full bg-white text-[#10223A] px-6 py-4 rounded-xl text-base font-medium shadow-lg hover:shadow-xl transition-all duration-200 hover:scale-[1.02] active:scale-[0.98]",
            form: { data: { turbo_frame: "punch_out_modal" } } do %>
          <div class="flex items-center justify-center gap-3">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
            </svg>
            <span>Punch Out</span>
          </div>
        <% end %>
      <% else %>
        <%= button_to punch_in_work_logs_path,
            method: :post,
            class: "w-full bg-[#97D700] text-[#10223A] px-6 py-4 rounded-xl text-base font-medium shadow-lg hover:shadow-xl transition-all duration-200 hover:scale-[1.02] active:scale-[0.98]",
            form: { data: { turbo_frame: "punch_in_modal" } } do %>
          <div class="flex items-center justify-center gap-3">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1" />
            </svg>
            <span>Punch In</span>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>

  <!-- Stats Grid -->
  <div class="px-4 sm:px-6 -mt-6">
    <div class="grid grid-cols-3 gap-3 sm:gap-4">
      <div class="bg-white rounded-xl p-4 border border-[#DBDBDB] shadow-sm">
        <div class="text-2xl sm:text-3xl font-medium text-[#10223A] mb-1"><%= @week_work_logs.count %></div>
        <div class="text-xs text-[#323233]/60">Days worked</div>
        <div class="text-xs text-[#226A73] mt-1">This week</div>
      </div>
      <div class="bg-white rounded-xl p-4 border border-[#DBDBDB] shadow-sm">
        <div class="text-2xl sm:text-3xl font-medium text-[#226A73] mb-1">
          <%= @today_work_logs.sum { |wl| wl.duration_hours.round(1) } %><span class="text-lg">h</span>
        </div>
        <div class="text-xs text-[#323233]/60">Hours logged</div>
        <div class="text-xs text-[#226A73] mt-1">Today</div>
      </div>
      <div class="bg-white rounded-xl p-4 border border-[#DBDBDB] shadow-sm">
        <div class="text-2xl sm:text-3xl font-medium text-[#97D700] mb-1"><%= @active_tasks.count %></div>
        <div class="text-xs text-[#323233]/60">In progress</div>
        <div class="text-xs text-[#97D700] mt-1">Right now</div>
      </div>
    </div>
  </div>

  <!-- Today's Tasks Section -->
  <% if @current_work_log && @current_work_log.tasks.any? %>
    <div class="px-4 sm:px-6 mt-6">
      <div class="flex items-center justify-between mb-3">
        <h2 class="text-base font-medium text-[#10223A]">Today's work</h2>
        <span class="text-xs text-[#323233]/60"><%= @current_work_log.work_log_tasks.count %> tasks</span>
      </div>
      
      <div class="bg-white rounded-xl border border-[#DBDBDB] shadow-sm overflow-hidden">
        <div class="divide-y divide-[#DBDBDB]">
          <% @current_work_log.work_log_tasks.includes(:task).each do |work_log_task| %>
            <div class="p-4 hover:bg-[#F8F7F7] transition-colors">
              <div class="flex items-start gap-3">
                <!-- Status Indicator -->
                <div class="flex-shrink-0 mt-1">
                  <% if work_log_task.completed? %>
                    <div class="w-5 h-5 bg-[#97D700] rounded-full flex items-center justify-center">
                      <svg class="w-3 h-3 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7" />
                      </svg>
                    </div>
                  <% elsif work_log_task.in_progress? %>
                    <div class="w-5 h-5 bg-[#226A73] rounded-full flex items-center justify-center">
                      <div class="w-2 h-2 bg-white rounded-full"></div>
                    </div>
                  <% else %>
                    <div class="w-5 h-5 border-2 border-[#DBDBDB] rounded-full"></div>
                  <% end %>
                </div>

                <!-- Task Content -->
                <div class="flex-1 min-w-0">
                  <h3 class="text-sm font-medium text-[#10223A] mb-1"><%= work_log_task.task.title %></h3>
                  <div class="flex items-center gap-2 flex-wrap">
                    <span class="inline-flex items-center px-2 py-0.5 rounded-md text-xs font-medium
                      <%= case work_log_task.status
                          when 'planned' then 'bg-[#DBDBDB] text-[#323233]'
                          when 'in_progress' then 'bg-[#226A73]/10 text-[#226A73]'
                          when 'completed' then 'bg-[#97D700]/10 text-[#97D700]'
                          when 'paused' then 'bg-yellow-100 text-yellow-800'
                          else 'bg-gray-100 text-gray-800'
                          end %>">
                      <%= work_log_task.status.humanize %>
                    </span>
                    <% if work_log_task.task.priority.present? %>
                      <span class="inline-flex items-center px-2 py-0.5 rounded-md text-xs font-medium
                        <%= case work_log_task.task.priority
                            when 'high' then 'bg-red-100 text-red-800'
                            when 'medium' then 'bg-yellow-100 text-yellow-800'
                            when 'low' then 'bg-[#97D700]/10 text-[#97D700]'
                            else 'bg-gray-100 text-gray-800'
                            end %>">
                        <%= work_log_task.task.priority.titleize %>
                      </span>
                    <% end %>
                  </div>
                </div>

                <!-- Action Buttons -->
                <div class="flex-shrink-0">
                  <% if work_log_task.planned? %>
                    <%= button_to start_work_log_task_path(work_log_task),
                        method: :post,
                        class: "bg-[#226A73] hover:bg-[#226A73]/90 text-white p-2 rounded-lg transition-colors",
                        form: { data: { turbo: true } } do %>
                      <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M8 5v14l11-7z" />
                      </svg>
                    <% end %>
                  <% elsif work_log_task.in_progress? %>
                    <%= button_to complete_work_log_task_path(work_log_task),
                        method: :post,
                        class: "bg-[#97D700] hover:bg-[#97D700]/90 text-[#10223A] p-2 rounded-lg transition-colors",
                        form: { data: { turbo: true } } do %>
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                      </svg>
                    <% end %>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>

        <!-- Add Task Button -->
        <div class="p-4 border-t border-[#DBDBDB] bg-[#F8F7F7]">
          <%= button_to new_task_work_log_path(@current_work_log),
              method: :get,
              class: "w-full bg-[#10223A] hover:bg-[#10223A]/90 text-white py-3 rounded-lg text-sm font-medium transition-colors flex items-center justify-center gap-2",
              form: { data: { turbo_frame: "task_modal" } } do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            <span>Add task</span>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Recent Activity -->
  <% if @recent_work_logs.any? %>
    <div class="px-4 sm:px-6 mt-6">
      <h2 class="text-base font-medium text-[#10223A] mb-3">Recent activity</h2>
      <div class="bg-white rounded-xl border border-[#DBDBDB] shadow-sm divide-y divide-[#DBDBDB]">
        <% @recent_work_logs.first(5).each do |work_log| %>
          <div class="p-4 hover:bg-[#F8F7F7] transition-colors">
            <div class="flex items-center gap-3">
              <div class="w-1 h-12 bg-[#226A73] rounded-full flex-shrink-0"></div>
              <div class="flex-1 min-w-0">
                <div class="text-sm font-medium text-[#10223A] mb-0.5">
                  <%= work_log.punch_in.strftime("%A, %B %d") %>
                </div>
                <div class="flex items-center gap-2 text-xs text-[#323233]/60">
                  <span><%= work_log.punch_in.strftime("%I:%M %p") %></span>
                  <% if work_log.punch_out %>
                    <span>→</span>
                    <span><%= work_log.punch_out.strftime("%I:%M %p") %></span>
                  <% else %>
                    <span class="inline-flex items-center px-2 py-0.5 rounded-md bg-[#97D700]/10 text-[#97D700] font-medium ml-1">
                      Active
                    </span>
                  <% end %>
                </div>
              </div>
              <% if work_log.punch_out %>
                <div class="text-right flex-shrink-0">
                  <div class="text-base font-medium text-[#226A73]"><%= work_log.duration_hours %><span class="text-xs">h</span></div>
                  <div class="text-xs text-[#323233]/60">logged</div>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<!-- Turbo Frames for modals -->
<%= turbo_frame_tag "punch_in_modal" do %>
<% end %>

<%= turbo_frame_tag "punch_out_modal" do %>
<% end %>

<%= turbo_frame_tag "task_modal" do %>
<% end %>