<% content_for :title, "Dashboard" %>

<div class="max-w-md mx-auto bg-white min-h-screen">
  <!-- Header -->
  <div class="bg-gradient-to-r from-indigo-600 to-purple-600 text-white p-6 rounded-b-3xl shadow-lg">
    <div class="flex items-center justify-between mb-4">
      <div>
        <h1 class="text-2xl font-bold">Hi, <%= current_user.name %>!</h1>
        <p class="text-indigo-100 text-sm mt-1">
          <%= Date.current.strftime("%A, %B %d") %>
        </p>
      </div>
      <div class="text-right">
        <% if @current_work_log %>
          <div class="bg-green-500 px-3 py-1 rounded-full text-xs font-medium">
            Active Since <%= @current_work_log.punch_in.strftime("%I:%M %p") %>
          </div>
        <% else %>
          <div class="bg-gray-600 px-3 py-1 rounded-full text-xs font-medium">
            Not Punched In
          </div>
        <% end %>
      </div>
    </div>

    <!-- Main Punch Button -->
    <div class="text-center mt-6">
      <% if @current_work_log %>
        <%= button_to "Punch Out", punch_out_work_log_path(@current_work_log),
            method: :get,
            class: "bg-red-500 hover:bg-red-600 text-white px-8 py-4 rounded-full text-lg font-semibold shadow-lg transform transition hover:scale-105",
            form: { data: { turbo_frame: "punch_out_modal" } } %>
        <p class="text-indigo-100 text-sm mt-2">Ready to wrap up your day?</p>
      <% else %>
        <%= button_to "Punch In", punch_in_work_logs_path,
            method: :post,
            class: "bg-green-500 hover:bg-green-600 text-white px-8 py-4 rounded-full text-lg font-semibold shadow-lg transform transition hover:scale-105",
            form: { data: { turbo_frame: "punch_in_modal" } } %>
        <p class="text-indigo-100 text-sm mt-2">Start your productive day</p>
      <% end %>
    </div>
  </div>

  <!-- Quick Stats -->
  <div class="grid grid-cols-3 gap-4 p-4">
    <div class="text-center p-3 bg-blue-50 rounded-xl">
      <div class="text-2xl font-bold text-blue-600"><%= @week_work_logs.count %></div>
      <div class="text-xs text-gray-600">Days This Week</div>
    </div>
    <div class="text-center p-3 bg-green-50 rounded-xl">
      <div class="text-2xl font-bold text-green-600">
        <%= @today_work_logs.sum { |wl| wl.duration_hours.round(1) } %>h
      </div>
      <div class="text-xs text-gray-600">Today</div>
    </div>
    <div class="text-center p-3 bg-purple-50 rounded-xl">
      <div class="text-2xl font-bold text-purple-600"><%= @active_tasks.count %></div>
      <div class="text-xs text-gray-600">Active Tasks</div>
    </div>
  </div>

  <!-- Current Session Tasks (only show when punched in) -->
  <% if @current_work_log && @current_work_log.tasks.any? %>
    <div class="px-4 mb-4">
      <div class="bg-green-50 border border-green-200 rounded-xl p-4">
        <h3 class="text-sm font-semibold text-green-800 mb-3">Today's Tasks</h3>
        <div class="space-y-2">
          <% @current_work_log.work_log_tasks.includes(:task).each do |work_log_task| %>
            <div class="flex items-center justify-between p-2 bg-white rounded-lg border">
              <div class="flex-1">
                <div class="font-medium text-sm"><%= work_log_task.task.title %></div>
                <div class="flex items-center space-x-2 mt-1">
                  <%= task_status_badge(work_log_task.status) %>
                  <%= task_priority_badge(work_log_task.task.priority) %>
                </div>
              </div>
              <div class="flex items-center space-x-1">
                <% if work_log_task.planned? %>
                  <%= button_to "▶", start_work_log_task_path(work_log_task),
                      method: :post,
                      class: "text-green-600 hover:text-green-800 text-sm bg-green-100 hover:bg-green-200 rounded px-2 py-1",
                      form: { data: { turbo: true } } %>
                <% elsif work_log_task.in_progress? %>
                  <%= button_to "✓", complete_work_log_task_path(work_log_task),
                      method: :post,
                      class: "text-blue-600 hover:text-blue-800 text-sm bg-blue-100 hover:bg-blue-200 rounded px-2 py-1",
                      form: { data: { turbo: true } } %>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
        <div class="mt-3 pt-3 border-t border-green-200">
          <%= button_to "+ Add Task", new_task_work_log_path(@current_work_log),
              method: :get,
              class: "w-full bg-green-600 hover:bg-green-700 text-white py-2 rounded-lg text-sm font-medium",
              form: { data: { turbo_frame: "task_modal" } } %>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Recent Activity -->
  <% if @recent_work_logs.any? %>
    <div class="px-4 pb-4">
      <h3 class="text-sm font-semibold text-gray-800 mb-3">Recent Activity</h3>
      <div class="space-y-2">
        <% @recent_work_logs.first(3).each do |work_log| %>
          <div class="flex items-center space-x-3 p-3 bg-gray-50 rounded-lg">
            <div class="w-2 h-2 bg-indigo-600 rounded-full"></div>
            <div class="flex-1 min-w-0">
              <div class="text-sm font-medium text-gray-900">
                <%= work_log.punch_in.strftime("%A, %B %d") %>
              </div>
              <div class="text-xs text-gray-500">
                <% if work_log.punch_out %>
                  <%= work_log.punch_in.strftime("%I:%M %p") %> - <%= work_log.punch_out.strftime("%I:%M %p") %>
                  <span class="text-green-600 ml-1">(<%= work_log.duration_hours %>h)</span>
                <% else %>
                  Started at <%= work_log.punch_in.strftime("%I:%M %p") %>
                  <span class="text-yellow-600 ml-1">(Active)</span>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<!-- Turbo Frames for modals -->
<%= turbo_frame_tag "punch_in_modal" do %>
<% end %>

<%= turbo_frame_tag "punch_out_modal" do %>
<% end %>

<%= turbo_frame_tag "task_modal" do %>
<% end %>